<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <header class="header">
      <div class="wrap header-inner">
        <h1 class="brand">
          <a href="/admin" class="brand-link">Admin Dashboard</a>
          <% if (typeof lockedStoreLabel !== 'undefined' && lockedStoreLabel) { 
               const _lbl = String(lockedStoreLabel || '');
               const _mapped = (_lbl.includes('Νίκαια') || _lbl.includes('Nikaia')) ? 'Store 1' : ((_lbl.includes('Αιγάλεω') || _lbl.includes('Aigaleo')) ? 'Store 2' : _lbl);
          %>
            <span class="badge" style="margin-left:8px;"><%= _mapped %></span>
          <% } %>
        </h1>
        <nav class="nav">
          <a class="btn btn-ghost" href="/">View site</a>
          <form method="POST" action="/admin/logout" style="margin:0;">
            <button class="btn btn-outline" type="submit" title="Sign out">Logout</button>
          </form>
        </nav>
      </div>
    </header>

    <main>
      <section class="hero">
        <div class="wrap">
          <div class="hero-copy">
            <h2 class="title">Manage bookings</h2>
            <p class="subtitle">Filter by barber and date to view appointments.</p>
          </div>
        </div>
      </section>

      <section class="booking">
        <div class="wrap wide">
          <div id="adminMsg" class="msg" style="margin: 0 0 10px 2px;"></div>
          <div class="form" style="margin-bottom: 12px;">
            <div class="row">
              <label>
                <span>Store</span>
                <select id="filterStore" <% if (typeof lockedStore !== 'undefined' && lockedStore) { %> data-locked="true" data-store="<%= lockedStore %>" disabled <% } %> >
                  <% if (!(typeof lockedStore !== 'undefined' && lockedStore)) { %>
                    <option value="">All stores</option>
                  <% } %>
                </select>
              </label>
              <label>
                <span>Barber</span>
                <select id="filterBarber">
                  <option value="">All barbers</option>
                </select>
              </label>
              <label>
                <span>Date</span>
                <input type="date" id="filterDate" />
              </label>
              <div style="display:flex; align-items:flex-end; gap:8px;">
                <button id="btnRefresh" class="btn" type="button">Refresh</button>
                <button id="btnClear" class="btn btn-ghost" type="button">Clear</button>
                <button id="btnCompleted" class="btn btn-ghost" type="button" title="Show completed appointments">Completed</button>
                <button id="btnCreate" class="btn btn-success" type="button">Create</button>
              </div>
            </div>
          </div>

          <div class="table-wrap">
            <table class="table" id="appointmentsTable">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Store</th>
                  <th>Barber</th>
                  <th>Service</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr><td colspan="10" style="text-align:center; color:#666;">Loading…</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <!-- Edit modal -->
    <div id="editModal" class="modal" hidden>
      <div class="modal-content">
        <h3 id="editModalTitle">Edit appointment</h3>
        <form id="editForm">
          <input type="hidden" name="_id" id="editId" />
          <div class="row">
            <label>
              <span>Name</span>
              <input type="text" name="name" id="editName" required />
            </label>
            <label>
              <span>Email</span>
              <input type="email" name="email" id="editEmail" required />
            </label>
          </div>
          <div class="row">
            <label>
              <span>Phone</span>
              <input type="tel" name="phone" id="editPhone" required />
            </label>
            <label>
              <span>Service</span>
              <select name="service" id="editService" required>
                <option value="" disabled selected>Choose a service…</option>
              </select>
            </label>
          </div>
          <div class="row">
            <label>
              <span>Store</span>
              <select name="store" id="editStore" required></select>
            </label>
            <label>
              <span>Barber</span>
              <select name="barber" id="editBarber" required></select>
            </label>
          </div>
          <div class="row">
            <label>
              <span>Date</span>
              <input type="date" name="date" id="editDate" required />
            </label>
            <label>
              <span>Time</span>
              <select name="time" id="editTime" required>
                <option value="" disabled selected>Select a time…</option>
              </select>
            </label>
          </div>
          <div class="actions">
            <button type="submit" class="btn" id="editSubmit">Save</button>
            <button type="button" class="btn btn-ghost" id="editCancel">Cancel</button>
            <% if (!(typeof lockedStore !== 'undefined' && lockedStore)) { %>
              <button type="button" class="btn btn-danger" id="editDelete">Delete</button>
            <% } %>
            <div id="editMsg" class="msg"></div>
          </div>
        </form>
      </div>
    </div>

    <footer class="footer">
      <div class="wrap footer-contact">
  <h3 class="footer-title">Contact</h3>
  <ul class="contact-list" aria-label="contact details">
          <li>
            <span class="icon" aria-hidden="true">
              <svg class="icon-svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor" focusable="false" aria-hidden="true"><path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 2v.01L12 12 4 6.01V6h16ZM4 18V8.11l7.4 5.55a1 1 0 0 0 1.2 0L20 8.11V18H4Z"/></svg>
            </span>
            <a href="mailto:example@example.gr">example@example.gr</a>
          </li>
          <li>
            <span class="icon" aria-hidden="true">
              <svg class="icon-svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor" focusable="false" aria-hidden="true"><path d="M6.62 10.79a15.05 15.05 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.01-.24c1.1.37 2.28.57 3.5.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1C10.3 21 3 13.7 3 4a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.22.2 2.4.57 3.5a1 1 0 0 1-.24 1.01l-2.2 2.2Z"/></svg>
            </span>
            <span class="label">Phone:</span> <a href="tel:+302100000000">210 000 0000</a>
          </li>
        </ul>
        <div class="footer-divider" role="presentation"></div>
  <div class="copyright">© <span id="year"></span> Barber Salon · Website by <strong>Antonios Rusman</strong>.</div>
      </div>
    </footer>

    <script src="/js/admin.js" defer></script>
  </body>
</html>
